<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/photos_width"
        android:layout_height="@dimen/photos_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/marginPhotoTop_main"
        android:layout_marginStart="@dimen/marginPhotoStart_main" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullname"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/marginTitleTop_main"
        android:layout_marginStart="@dimen/marginTitleStart_main"
        android:textSize="@dimen/title_person"
        android:text="@string/ExampleText"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>



</androidx.constraintlayout.widget.ConstraintLayout>